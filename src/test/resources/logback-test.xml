<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr([%t]){faint} %clr(:){faint} %m%n}}"/>

    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <!--<logger name="org.springframework" level="INFO"/>-->
    <!--<logger name="com.yxtec" level="INFO"/>-->

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>